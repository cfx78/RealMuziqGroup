---
import MainSection from "../components/MainSection.astro";
import MainLayout from "../layouts/main-layout.astro";
import { Image } from "astro:assets";
import logo from './src/images/Real_Muziq_Group_Logo_White.png';
---
<MainLayout>
<MainSection bgImg="bg-rmg-logo" >
<Image src={logo} alt="real-muziq-logo" width='500' height={500/2} />
</MainSection>
<MainSection bgImg="bg-t_o" >
    <h2 class="text-3xl">About</h2>
    <p class="text-xl text-center">Learn more About Real Muziq Group</p>
    <a class="link link-hover border rounded-md py-2 px-6 hover:bg-white hover:text-black focus:scale-90 transition cursor-pointer" href="/about">About Page</a>
</MainSection>
<MainSection bgImg="bg-teezy" >
    <h2 class="text-3xl">Artists</h2>
    <p class="text-xl text-center">Learn more About Real Muziq Group Artists</p>
    <a class="link link-hover border rounded-md py-2 px-6 hover:bg-white hover:text-black focus:scale-90 transition cursor-pointer" href="/artists">Artists Page</a>
</MainSection>
<MainSection bgImg="bg-smoke" >
    <h2 class="text-3xl">Contact Us</h2>
    <p class="text-xl text-center">Reach out to the Real Muziq Group team</p>
    <a class="link link-hover border rounded-md py-2 px-6 hover:bg-white hover:text-black focus:scale-90 transition cursor-pointer" href="/contact">Contact Us</a>
</MainSection>
<MainSection bgImg="bg-studio" >
    <h2 class="text-3xl">Book Studio Session</h2>
    <p class="text-xl text-center">Learn more About Real Muziq Group Artists</p>
    <a class="link link-hover border rounded-md py-2 px-6 hover:bg-white hover:text-black focus:scale-90 transition cursor-pointer" href="/artists">Book Studio Session</a>
</MainSection>
</MainLayout>